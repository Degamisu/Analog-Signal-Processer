<Window x:Class="AVSP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Analog Video Signal Processor" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar at the top -->
        <ToolBarTray>
            <ToolBar>
                <Button Content="Open" Click="OpenButton_Click"/>
            </ToolBar>
        </ToolBarTray>

        <!-- Main content grid with two columns -->
        <Grid Grid.Row="1" Background="#FF303437">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Image x:Name="SelectedImage" HorizontalAlignment="Right" VerticalAlignment="Center" Stretch="Uniform" Grid.Column="1"/>
        </Grid>
    </Grid>
</Window>
